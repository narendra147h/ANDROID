<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.collection.garbage.awms.Profile"
    android:id="@+id/drawerLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/loginstatus"
        android:text="Welcome Guest"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="vertical"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="30dp"
            android:text="Send Request For Garbage"
            android:id="@+id/Request"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAlignment="center"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="30dp"
            android:text="Profile"
            android:id="@+id/Profile"
            />


    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:menu="@menu/navigable_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigable_menu_layout"
        android:id="@+id/navigable"
        >


    </android.support.design.widget.NavigationView>





</android.support.v4.widget.DrawerLayout>
